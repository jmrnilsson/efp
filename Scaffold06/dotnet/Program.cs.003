using System;
using System.Linq;
using System.Diagnostics;
using System.Collections.Generic;
using Microsoft.Data.Entity;
using System.Linq.Expressions;
using Newtonsoft.Json;

namespace dotnet
{
    public class Program
    {
        public static void Main()
        {
        	int hashLimit = 25;
        	var rand = new Random();
            using (var db = new blogContext())
            {
            	var query =
                    from b in db.Blog
                    join p in db.Post on b.BlogId equals p.BlogId
                    select new {b, p};

                var selected = query.ToList().Select((it, i) => new
                {
                	index = i,
                    seed = Math.Round(Math.Pow(i, 26 - i), 2),
                    random = rand.Next(1024),
                    url = it.b.Url.Substring(0, hashLimit),
                    title = it.p.Title.Substring(0, hashLimit),
                    content = it.p.Content.Substring(0, hashLimit)
               	});

                var result = JsonConvert.SerializeObject(selected.Take(25).ToList());

                Console.WriteLine(result);
            }
        }
    }
}